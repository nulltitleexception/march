@require 'util'

.player {
    border: 2px solid black;
    margin: 5px;
    padding: 5px;
}
.nav
    justify-content space-between
    margin-bottom 5px

body {
    font: 13px Helvetica, Arial;
}
p {
    margin: 5px;
}
.wrap
    display inline-block

.row
    flex-full()
    flex-row()

.col
    flex-full()
    flex-col()

.section
    border: 2px solid black;
    margin: 5px;
    padding: 5px;

    flex-full()

.stretch
    justify-content stretch

.flex
    flex-full()

.flex_grow
    flex-grow()

.flex_shrink
    flex-shrink()

.flex_none
    flex-none()
    flex-row()
