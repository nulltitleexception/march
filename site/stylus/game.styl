@require 'util'

p
    margin 0

.all
    position absolute
    left 0
    top 0 
    width 100%
    height 100%

#canvas_div
    position relative

canvas,#canvasText
    position absolute
    left 0
    top 0 
    width 100%
    height 100%

#tileCanvas
    z-index 0
#entityCanvas
    z-index 1
#uiCanvas
    z-index 2
#canvasText
    z-index 3

.border_sides
    border-left 1px solid black
    border-right 1px solid black

.border_bottom
    border-bottom 1px solid black 

.row
    flex-full()
    flex-row()

.col
    flex-full()
    flex-col()

.section
    border 2px solid black
    margin 5px
    padding 5px

    flex-full()

.stretch
    justify-content stretch

.flex
    flex-full()

.flex_grow
    flex-grow()

.flex_shrink
    flex-shrink()

.flex_none
    flex-none()
    flex-row()

.maxw25
    max-width 25%

.maxh50
    max-height 50%
