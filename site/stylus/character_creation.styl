@require 'util'

.cnum
    flex-row()
    flex-none()
.cnum_button, .cnum_value
    flex-none()

.nav
    justify-content space-between
    margin-bottom 5px

.input
    min-width 100px
    border 1px solid black
    flex-col()
    justify-content center
    padding 3px

body {
    font: 13px Helvetica, Arial;
}
th, td {
    text-align: left;
}
table {
    border-collapse: collapse;
    height: 100%;
    width: 100%;
}
p {
    margin: 5px;
}
.wrap
    display inline-block
.all {
    position: absolute;
    height: 100%;
    width: 100%;
    left: 0%;
    top: 0%;
}
.outer {
    padding: 5px;
    position: relative;
}
.char_sheet {
    border: 2px solid black;
}
.row {
    flex-full()
    flex-row()
}
.col {
    flex-full()
    flex-col()
}
.section {
    border: 2px solid black;
    margin: 5px;
    padding: 5px;

    flex-full()
}

.flex
    flex-full()

.flex_grow
    flex-grow()

.flex_shrink
    flex-shrink()

.flex_none {
    flex-none()
    flex-row()
}
