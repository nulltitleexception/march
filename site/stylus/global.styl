@require 'util'

*
    box-sizing border-box
    
body
    font 13px Helvetica, Arial
    color $content_color_faded

input, button, select
    background-color $background_color_faded
    color $content_color_faded
    border-color $border_color_faded

.all
    position absolute
    left 0
    top 0 
    width 100%
    height 100%

.overflow_auto
    overflow auto

.wrap
    display inline-block
    
.border_sides
    border-left 1px solid $border_color_faded
    border-right 1px solid $border_color_faded

.border_bottom
    border-bottom 1px solid $border_color_faded 

.row
    flex-full()
    flex-row()

.col
    flex-full()
    flex-col()

.flex
    flex-full()

.flex_grow
    flex-grow()

.flex_shrink
    flex-shrink()

.flex_none
    flex-none()

.maxw25
    max-width 25%

.maxh50
    max-height 50%
