doctype html

html
    head
        title GotG
        script(src=socket_io_path)
        script(src=jquery_path)
        script(src=vue_path)
        script(type="module" src="./js/index.js")
        link(href="https://fonts.googleapis.com/css2?family=IM+Fell+English+SC&family=Open+Sans&display=swap" rel="stylesheet")
        link(rel="stylesheet" type="text/css" href="./css/global.css")
        link(rel="stylesheet" type="text/css" href="./css/index.css")
    body
        #index.all
            a.nav_left.round_border.row-r(v-if="!logged_in" href="./create")
                p.flex_none New User
                img.icon.flex(src="./svg/octicon/person/fill-CCC")
            a.nav_right.round_border.row(v-if="!logged_in" href="./login")
                p.flex_none Sign In
                img.icon.flex(src="./svg/octicon/sign-in/fill-CCC")
            a.nav_left.round_border.row-r(v-if="logged_in" href="" @click="clearCredentials")
                p.flex_none Sign Out
                img.icon.flex(src="./svg/octicon/sign-out/fill-CCC")
            .nav_right.row(v-if="logged_in")
                p.flex_none.f_end Signed in as {{username}}, 
                a.round_border.flex.row(href="./home")
                    p.flex_none Play
                    img.icon.flex(src="./svg/octicon/home/fill-CCC")
            .bottom_left.row
                .icon_large.flex.row
                    a.flex.row(href="./link/github")
                        img.flex(src="./svg/octicon/mark-github/fill-CCC" alt="Github Repo")
                .icon_large.flex.row
                    a.flex.row(href="./link/bugs")
                        img.flex(src="./svg/octicon/bug/fill-CCC" alt="Issues")
            .bottom_right.row
                a.ko-fi_button.row.flex_none(href='https://ko-fi.com/P5P31LH97')
                    img.ko-fi_cup.flex_shrink(src="https://cdn.ko-fi.com/cdn/cup-border.png")
                    p Buy me a Coffee :)
            .outer
                .pad
                .mid
                    .pad
                    .inner
                        h1.title GotG
                    .pad
                .pad
