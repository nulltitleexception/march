doctype html
html
    head
        title GotG
        script(src="/socket.io/socket.io.js")
        script(src="/dependencies/jquery.js")
        script(src="/dependencies/vue.js")
        script(type="module" src="/js/game.js")
        style
            include ../css/global.css
        style
            include ../css/game.css

body
    #game.all.row
        .flex.col.maxw25.border_sides
            game_sheet_pane.flex.maxh50.border_bottom(v-bind:self="{player,sheet_view}")
            game_status_pane.flex.maxh50(v-bind:self="{player}")
        #canvas_div.flex
            canvas#tileCanvas
            canvas#entityCanvas
                canvas#uiCanvas
            #canvasText
                centered_label(v-for="label in canvas_labels" v-bind:key="label.x + label.text + label.y" v-bind:self="label")
        .flex.col.maxw25.border_sides
            game_social_pane.flex.maxh50.border_bottom(v-bind:self="social")
            game_chat_pane.flex.maxh50(v-bind:self="chat")
